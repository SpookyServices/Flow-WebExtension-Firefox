{
  "author": "Spooky Services",
  "host_permissions": ["https://app.flow.spookysrv.com/*"],
  "content_scripts": [
    {
      "all_frames": true,
      "js": ["getConvoToken.js"],
      "matches": ["https://app.flow.spookysrv.com/*"]
    }
  ],
  "description": "Flow allows you to send notes and links between your devices seamlessly.",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "64": "icon64.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "manifest_version": 3,
  "short_name": "Flow",
  "name": "Flow by Spooky Services",
  "homepage_url": "https://flow.spookysrv.com",
  "permissions": ["tabs", "storage"],
  "version": "0.0.8",
  "sidebar_action":   {
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "64": "icon64.png",
      "128": "icon128.png"
    },
    "default_title": "Flow by Spooky Services",
    "default_panel": "sidepanel.html",
    "open_at_install": false
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "flow@spookysrv.com"
    }
  }
}
